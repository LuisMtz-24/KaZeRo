<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema BASE con ActionBar (aunque no lo uses, debe estar definido) -->
    <style name="Theme.KaZeRo" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Colores de la ActionBar si la usaras -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
    </style>

    <!-- Tema SIN ActionBar (el que usarÃ¡s en todas las pantallas) -->
    <style name="Theme.KaZeRo.NoActionBar" parent="Theme.KaZeRo">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Asegura que el fondo sea visible -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- ActionBar Style personalizado -->
    <style name="CustomActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@color/primary</item>
        <item name="titleTextStyle">@style/CustomActionBarTitle</item>
    </style>

    <style name="CustomActionBarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- EditText Style -->
    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>

    <!-- Card Style -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

</resources>