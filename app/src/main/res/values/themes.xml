<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema BASE - Simplificado -->
    <style name="Theme.KaZeRo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">#D4AF37</item>
        <item name="colorPrimaryDark">#B8941E</item>
        <item name="colorAccent">#D4AF37</item>

        <!-- Fondo blanco -->
        <item name="android:windowBackground">#FFFFFF</item>

        <!-- Colores de texto -->
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#757575</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">#D4AF37</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!-- Tema SIN ActionBar (el que usas) -->
    <style name="Theme.KaZeRo.NoActionBar" parent="Theme.KaZeRo">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Button Primary Style -->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#D4AF37</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Button Secondary Style -->
    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">#D4AF37</item>
        <item name="android:textColor">#D4AF37</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- EditText Style - Simplificado -->
    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#D4AF37</item>
        <item name="hintTextColor">#757575</item>
    </style>

    <!-- Card Style -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
    </style>

</resources>